<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alexchar.studyorganizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SubjectActivity"
            android:label="@string/title_activity_subject"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.EditSubjectActivity" />
        <activity
            android:name=".activities.MarkActivity"
            android:label="@string/title_activity_marks"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.TaskActivity" />
        <receiver android:name=".AlertReceiver"/>
    </application>

</manifest>