<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:clickable="true"
    android:focusable="auto"
    >

    <android.support.v7.widget.CardView
        android:layout_margin="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:elevation="8dp"
        app:cardUseCompatPadding="true"
        tools:context="com.example.alexchar.studyorganizer.fragments.SubjectInputFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/fragment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#363b59"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Προσθέστε Task:"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <!--Task Title-->
                <EditText
                    android:id="@+id/set_title_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Τίτλος"
                    android:maxLines="1"
                    android:paddingLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/fragment_title"
                    android:background="@drawable/corner_radius" />

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/set_title_input"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/corner_radius"
                    android:hint="Μάθημα"
                    android:paddingBottom="4dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="2dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_icon"
                    android:padding="5dp"
                    android:layout_alignTop="@id/autocomplete_search"
                    android:layout_alignLeft="@+id/autocomplete_search"
                    android:layout_alignBottom="@id/autocomplete_search"
                    app:srcCompat="@drawable/ic_search_black_24dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/dropdown_icon"
                    android:layout_alignTop="@id/autocomplete_search"
                    android:layout_alignRight="@+id/autocomplete_search"
                    android:layout_alignBottom="@id/autocomplete_search"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

                <!--Notes-->
                <EditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/autocomplete_search"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/text_area"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:minLines="2"
                    android:hint="Σημειώσεις"/>

                <!--Due date-->
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/due_date_title"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:text="Καθορισμός Προθεσμίας"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_below="@+id/notes"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/datepicker"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/due_date_title"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/datepicker_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_radius"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/ic_baseline_calendar_today_18px"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp"
                        android:text="Ημερομηνία"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/timepicker_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:focusable="false"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:text="Ώρα"
                        android:background="@drawable/corner_radius"
                        android:layout_weight="1"/>

                </LinearLayout>

                <!--Buttons Cancel and Submit!-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/buttons"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/datepicker">

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="match_parent"
                        android:theme="@style/SpecialButton"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:text="Ακύρωση"
                        android:textAllCaps="false"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/save_button"
                        android:theme="@style/SaveButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:text="Προσθήκη"
                        android:textAllCaps="false"
                        android:textColor="#FFF" />
                </LinearLayout>

            </RelativeLayout>


        </ScrollView>

    </android.support.v7.widget.CardView>
</FrameLayout>
