<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TaskInfoFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="8dp"
        app:cardUseCompatPadding="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/fragment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#363b59"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Πληροφορίες:"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <!--Task Title-->
                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Τίτλος"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/fragment_title"
                    android:background="@drawable/corner_radius" />


                <EditText
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Μάθημα"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/title"
                    android:background="@drawable/corner_radius"/>

                
                <!--Notes-->
                <EditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subject"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/text_area"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:minLines="3"
                    android:hint="Σημειώσεις"/>

                <!--Due date-->
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/due_date_title"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingLeft="12dp"
                    android:text="Προθεσμία"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_below="@+id/notes"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/datepicker"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/due_date_title"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_radius"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/ic_baseline_calendar_today_18px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:textSize="14sp"
                        android:text="Ημερομηνία"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:focusable="false"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:text="Ώρα"
                        android:background="@drawable/corner_radius"
                        android:layout_weight="1"/>

                </LinearLayout>

            </RelativeLayout>


        </ScrollView>

    </android.support.v7.widget.CardView>

</FrameLayout>