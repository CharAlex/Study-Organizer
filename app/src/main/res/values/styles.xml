<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpecialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#e0e0e0</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="WarningButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#f74949</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="SaveButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#38ba7d</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

</resources>
